{
   "compilerOptions": {
      // ======================================================================
      // Language & Environment
      // Defines JavaScript version and runtime environment
      // ======================================================================
      "target": "ES2017",
      "module": "esnext",
      "lib": ["dom", "dom.iterable", "esnext"],
      "moduleResolution": "node",
      "isolatedModules": true,

      // ======================================================================
      // Type Safety - Foundation
      // Core type checking settings for a robust codebase
      // ======================================================================
      "strict": true,
      "strictNullChecks": true,
      "noImplicitAny": true,
      "noImplicitThis": true,

      // ======================================================================
      // Type Safety - Advanced
      // Additional checks for higher code quality
      // ======================================================================
      "noUncheckedIndexedAccess": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "allowUnreachableCode": false,
      "useUnknownInCatchVariables": true,
      "noImplicitOverride": true,

      // ======================================================================
      // Interoperability
      // Settings for working with different file types and modules
      // ======================================================================
      "allowJs": true,
      "checkJs": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,

      // ======================================================================
      // Build & Performance
      // Settings that affect compilation output and build performance
      // ======================================================================
      "skipLibCheck": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "forceConsistentCasingInFileNames": true,

      // ======================================================================
      // Project Structure
      // Configure import paths and module resolution
      // ======================================================================
      "baseUrl": ".",
      "paths": {
         "@/*": ["./src/*"],
         "@/public/*": ["./public/*"],
         "@/types/*": ["./src/types/*"],
         "@/styles/*": ["./src/styles/*"],
         "@/components/*": ["./src/components/*"],
      },

      // ======================================================================
      // Next.js Project Configuration
      // Controls settings specific to Next.js framework
      // ======================================================================
      "jsx": "preserve",
      "incremental": true,
      "noEmit": true,
      "plugins": [{ "name": "next" }]
   },

   "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/api/calendars/[id]"],
   "exclude": ["node_modules"]
}